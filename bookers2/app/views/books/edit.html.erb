
<% if @book.errors.any? %>
  <div id="error">
    <h3><%=@book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    </ul>
    <% end %>
  </div>
<% end %>

<div class="container">
<%= form_with model:@book, local:true do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"form-control", id:"book_title"%>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control", id:"book_body"%>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success"%>
        </div>

        <%= link_to "Show", book_path(@book.id) %>
        |
       <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
<% end %>