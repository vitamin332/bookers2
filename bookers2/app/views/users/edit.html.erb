<main>
  <p id="notice"></p>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>

  <div class="continer">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
          <%= form_with model:@user, local: true do |f| %>
        <div class="form-group">
          <label for="name">Name</label></label>
          <div class="text"><%= f.text_field :name %></div>
         </div>

        <div class="form-group">
          <label for="image">image</label><br />
          <%= f.attachment_field :profile_image, placeholder: "image" %>
        </div>

        <div class="form-group">
          <label for="">introduction</label>
          <div class="text"><%= f.text_area :introduction %></div>
        </div>
        <div class="form-group">
          <span class="btn"><%= f.submit 'Update User', class:"btn btn-secondary" %></span>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>