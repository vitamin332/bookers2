<!DOCTYPE html>
<html>
  <head>
   <title>Boockers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>


 <% if user_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>

            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
              aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span></button>
              <div class="navbar-collapse collapse" id="navbarNavDropdown" >
            <ul class="navbar-nav ml-auto">
              <li><p class="fas fa-home nav-link text-light text-white" > <%= link_to 'Home', user_path(current_user.id), class:"text-light" %></p></li>
              <li><p class="fas fa-users nav-link text-light"> <%= link_to 'Users', users_path , class:"text-light" %></p></li>
              <li><p class="fas fa-book-open nav-link text-light"> <%= link_to 'Books', books_path , class:"text-light"%></p></li>
              <li><p class="fas fa-sign-out-alt nav-link text-light"><%= link_to "Log out", destroy_user_session_path, method: :delete , class:"text-light"%></p></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <br>
    <% else %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>

            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
              aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span></button>
              <div class="navbar-collapse collapse" id="navbarNavDropdown" >
            <ul class="navbar-nav ml-auto">

              <li><p class="fas fa-home nav-link text-light"> <%= link_to "Home", root_path , class:"text-light"%></p></li>
              <li><p class="fas fa-link nav-link text-light"> <%= link_to "About", home_about_path , class:"text-light"%></a></li>
              <li><p class="fas fa-user-plus nav-link text-light">  <%= link_to "Sign up", new_user_registration_path , class:"text-light"%></p></li>
              <li><p class="fas fa-sign-in-alt nav-link text-light"> <%= link_to "Log in", new_user_session_path , class:"text-light"%></p></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <br>
    <% end %>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
